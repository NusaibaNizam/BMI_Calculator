<?xml version="1.0" encoding="utf-8"?><layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InputFragment"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">
        <TextView
            android:id="@+id/headerTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What Is Your Height And Weight?"
            android:textStyle="bold"
            android:textSize="35dp"
            android:paddingTop="15dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/primary"
            />
        <TextView
            android:id="@+id/heightTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="7dp"
            android:textColor="@color/black"
            android:textStyle="italic|bold"
            android:textSize="17dp"
            android:text="My Weight is"/>
        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:id="@+id/weightCounter"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            app:initialNumber="1"
            app:finalNumber="300"
            app:textColor="@color/white"
            app:backGroundColor="@color/primary"
            app:backgroundDrawable="@drawable/counter"
            app:textSize="10dp"/>
        <TextView
            android:id="@+id/kgTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="7dp"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:textSize="15dp"
            android:text="Kilograms"/>
        <TextView
            android:id="@+id/iamTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="25dp"
            android:paddingBottom="7dp"
            android:textColor="@color/black"
            android:textStyle="italic|bold"
            android:textSize="17dp"
            android:text="I am"/>
        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:id="@+id/feetCounter"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            app:initialNumber="1"
            app:finalNumber="8"
            app:textColor="@color/white"
            app:backGroundColor="@color/primary"
            app:backgroundDrawable="@drawable/counter"
            app:textSize="10dp"/>
        <TextView
            android:id="@+id/feetTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="7dp"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:textSize="15dp"
            android:text="Feet"/>
        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:id="@+id/inchCounter"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            app:initialNumber="0"
            app:finalNumber="11"
            app:textColor="@color/white"
            app:backGroundColor="@color/primary"
            app:backgroundDrawable="@drawable/counter"
            app:textSize="10dp"/>
        <TextView
            android:id="@+id/inchsTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="7dp"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:textSize="15dp"
            android:text="Inches"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/calculateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_button"
            android:text="GO"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:layout_margin="20dp"/>


    </LinearLayout>
</layout>